<h2>Listing tags</h2>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for tag <- @tags do %>
    <tr>
      <td><%= tag.text %></td>

      <td class="text-right">
        <%= link "Show", to: tag_path(@conn, :show, tag), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: tag_path(@conn, :edit, tag), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: tag_path(@conn, :delete, tag), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New tag", to: tag_path(@conn, :new) %>
